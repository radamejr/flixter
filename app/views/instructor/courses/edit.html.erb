<div class="booyah-box col-10 offset-1">
  <h1>Edit details for course:</h1>
  <h1>
    <%= current_course.title %>
  </h1>
  <%= simple_form_for current_course, url: instructor_course_path do |f| %>
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :cost %>
    <%= f.input :image %>
    <br />
    <%= f.submit "Update", class: 'btn btn-primary' %>
    <% end %>
    <br />
</div>

