<!DOCTYPE html>
<html>
<head>
  <title>Flixter</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  <link href="https://vjs.zencdn.net/7.6.0/video-js.css" rel="stylesheet">

</head>

<body>
  <div id="flex-content-container">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <%= link_to 'Flixter', root_url, class: 'navbar-brand' %>

      <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <ul class="navbar-nav mr-auto mt-2 mt-md-0">
          <li class="nav-item">
            <%= link_to "See All Courses", courses_path, class: 'nav-link'%>   
          </li>
          
        </ul>

        <ul class="navbar-nav">
          <% if user_signed_in? %>
          <li class="nav-item">
            <%= link_to 'My Dashboard', dashboard_path, class: 'nav-link', :id => 'username' %>  
          </li>
          <li class="nav-item">
            <%= link_to 'Sign Out', destroy_user_session_path, method: :delete, class: 'nav-link' %>
          </li>
          <% else %>
          <li class="nav-item">
            <%= link_to 'Sign In', new_user_session_path, class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to 'Sign Up', new_user_registration_path, class: 'nav-link' %>
          </li>
          <% end %>
        </ul>
      </div>


    </nav>

    <% if notice.present? %>?
    <p class="notice"><%= notice %></p>
    <% end %>
    <% if alert.present? %>
    <p class="alert"><%= alert %></p>
    <% end %>

    <%= yield %>

  </div>
  <div id="footer">
    <div class="container">
      <div class="row">
        <div class="col-12 col-sm-3">
          <b>Teachers</b>
          <br />
          <%= link_to 'Teach a Course', new_instructor_course_path %>
          <br />
          <%= link_to 'My Dashboard', dashboard_path %>
        </div>
        <div class="col-12 col-sm-3">
          <b>About</b>
          <br />
          <%= link_to 'Team', team_path %>
          <br />
          <%= link_to 'Careers', careers_path %>
          <br />
          <%= link_to 'Privacy Policy', privacy_path %>
        </div>
        <div class="col-12 col-sm-3">
          <b>Contact</b>
          <br />
          radamejr@gmail.com
        </div>
        <div class="col-12 col-sm-3 social">
          <b>Social</b>
          <br />
          <br />
          <%= link_to 'https://github.com/radamejr' do %>
            <span class="fa fa-github-square fa-2x social-button"></span>
          <% end %>
          
        </div>
      </div>
    </div>
  </div>

  <script src='https://vjs.zencdn.net/7.6.0/video.js'></script>
  <script src="https://vjs.zencdn.net/ie8/1.1.2/videojs-ie8.min.js"></script>
</body>
</html>
